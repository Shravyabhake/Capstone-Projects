package com.orangehrm;

import java.time.Duration;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.edge.EdgeDriver;
import org.testng.annotations.AfterTest;
import org.testng.annotations.BeforeTest;
import org.testng.annotations.Test;


public class Admintextexectn2 {
    WebDriver driver;
    Adminpage2 page;
    @BeforeTest
    public void setup() throws InterruptedException {
        driver = new EdgeDriver();
        driver.manage().window().maximize();
        driver.manage().timeouts().implicitlyWait(Duration.ofSeconds(10));

        driver.get("https://opensource-demo.orangehrmlive.com/web/index.php/auth/login");
        Thread.sleep(3000);

        // login
        driver.findElement(By.name("username")).sendKeys("Admin");
        driver.findElement(By.name("password")).sendKeys("admin123");
        driver.findElement(By.xpath("//button[@type='submit']")).click();
        Thread.sleep(3000);

        // initialize page object
        page = new  Adminpage2 (driver);
    }
  
    
    @Test(priority = 1)
    public void testMenuOptions() {
        int count = page.getLeftMenuOptions();
        System.out.println("Total menu options = " + count);
        page.clickAdminMenu();
    }

    @Test(priority = 2)
    public void testSearchByUserName() throws InterruptedException {
        page.searchByUserName("Admin");
        System.out.println("User name Records found: " + page.getSearchResults());
        page.refreshPage();
        Thread.sleep(2000);
    }

    @Test(priority = 3)
    public void testSearchByUserRole() throws InterruptedException {
        page.selectUserRoleAdmin();
        
        System.out.println("User Role Records found: " + page.getSearchResults());
        page.refreshPage();
        Thread.sleep(2000);
    }

    @Test(priority = 4)
    public void testSearchByUserStatus() throws InterruptedException {
        page.selectUserStatus("Enabled");
        System.out.println("User Status Records found : " + page.getSearchResults());
        page.refreshPage();
        Thread.sleep(2000);
    }

    @AfterTest
    public void tearDown() {
        driver.quit();
    }
}
